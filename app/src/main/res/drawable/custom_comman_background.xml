<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ffffff" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

            <size
                android:width="150dp"
                android:height="50dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#57adff"
                android:endColor="#8fa6f7"
                android:angle="270" />

            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
            <size
                android:width="100dp"
                android:height="25dp"
                />
        </shape>
    </item>
</selector>
