<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp" >

    <ImageView
        android:id="@+id/regverDwnlddPhotoImageAftrCapture"
        android:layout_width="100dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:maxWidth="150dp"
        android:background="@drawable/idround_photo"
        android:layout_marginRight="5dp"
        android:contentDescription="TODO"
        android:src="@drawable/studentdefaultimage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/regverDwnlddPhotoImageAftrCapture"
        android:orientation="vertical">

        <TextView
            android:id="@+id/regverStudentIDTextView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:maxLines="1"
            android:layout_weight="2"
            android:maxLength="20"
            android:ellipsize="end"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:text="Example application"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/regverStudentNameTextView"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:paddingBottom="5dp"
            android:text="Description"
            android:textSize="20dp" />
    </LinearLayout>



    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:id="@+id/view3"
        android:layout_alignParentBottom="true"
        android:background="@android:color/holo_blue_bright"/>
</RelativeLayout>