<?xml version="1.0" encoding="utf-8" ?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manvish.aadhartimeattendance.Activities.MenuActivity">

    <include android:id="@+id/header" layout="@layout/header_layout"></include>

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:id="@+id/view1"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@+id/header" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:background="#f28269be"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:layout_below="@+id/view1"
        android:text="RFID Menu"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/MainPageCmpyAddrTextView" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:id="@+id/view2"
        android:background="@android:color/holo_blue_light"
        android:layout_below="@+id/MainPageCmpyAddrTextView" />




        <TextView
            android:id="@+id/regrfidtv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Register RFID"
            android:textColor="#ffffffff"
            android:layout_below="@+id/MainPageCmpyAddrTextView"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textSize="25sp"
            android:background="@drawable/menu_button_selector"
            android:gravity="center"
            android:layout_margin="10dp"
            android:drawablePadding="2dip"
            android:paddingLeft="30dip"
            android:paddingRight="26dip"
            android:drawableLeft="@drawable/newrfidsensor"

            />

    <TextView
        android:id="@+id/verifyrfidtv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Verify RFID"
        android:textColor="#ffffffff"
        android:layout_below="@+id/regrfidtv"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:drawablePadding="2dip"
        android:paddingLeft="30dip"
        android:paddingRight="26dip"
        android:textSize="25sp"
        android:background="@drawable/menu_button_selector"
        android:gravity="center"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/regrfid"
        />

    <Button
        android:id="@+id/rfidMenuBackBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:padding="20dp"
        android:layout_marginTop="40dp"
        android:text="Back"
        android:textColor="@android:color/white"
        android:background="@drawable/cancel_btn_effects"
        android:visibility="visible"
        android:textSize="24sp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:width="150dp" />





</RelativeLayout>